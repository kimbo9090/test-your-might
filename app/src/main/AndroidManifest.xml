<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.tomas9080gmail.test_your_might">
    <uses-permission android:name="android.permission.WRITE_EXTERNAL_STORAGE" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".logoActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".acercaDe" />
        <activity
            android:name=".listadoPreguntas"
            android:label="@string/title_activity_listado_preguntas"
            android:theme="@style/AppTheme.NoActionBar" />
        <activity
            android:name=".anadirTarea"
            android:label="@string/title_activity_anadir_tarea"
            android:theme="@style/AppTheme.NoActionBar"></activity>
        <activity android:name=".resumen"
            android:theme="@style/AppTheme.NoActionBar">
            <intent-filter>
                <action android:name="android.intent.action.SEND"/>
                <category android:name="android.intent.category.DEFAULT"/>
                <data android:mimeType="text/*"/>
            </intent-filter>
        </activity>
    </application>

</manifest>
<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/constraint"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".anadirTarea"
    tools:showIn="@layout/activity_anadir_tarea">

    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintHorizontal_bias="1.0"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintVertical_bias="0.0">

        <Button
            android:id="@+id/anadir_categoria"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentStart="true"
            android:layout_alignParentTop="true"
            android:layout_marginStart="54dp"
            android:layout_marginTop="108dp"
            android:text="AÃ±adir categoria"
            tools:layout_editor_absoluteX="44dp"
            tools:layout_editor_absoluteY="103dp" />

        <EditText
            android:id="@+id/enunciado"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_marginTop="32dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pregunta1"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_centerHorizontal="true"
            android:layout_marginTop="166dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pregunta2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pregunta1"
            android:layout_alignStart="@+id/pregunta4"
            android:layout_marginTop="57dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pregunta4"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pregunta3"
            android:layout_alignStart="@+id/pregunta1"
            android:layout_marginStart="0dp"
            android:layout_marginTop="33dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <EditText
            android:id="@+id/pregunta3"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/pregunta2"
            android:layout_alignStart="@+id/pregunta1"
            android:layout_marginStart="1dp"
            android:layout_marginTop="45dp"
            android:ems="10"
            android:inputType="textPersonName" />

        <Button
            android:id="@+id/guardaPregunta"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/enunciado"
            android:layout_alignParentStart="true"
            android:layout_marginStart="222dp"
            android:layout_marginTop="30dp"
            android:text="Guardar" />

    </RelativeLayout>

    <Spinner
        android:id="@+id/categoriaSpinner"
        android:layout_width="368dp"
        android:layout_height="24dp"
        tools:layout_editor_absoluteX="8dp"
        tools:layout_editor_absoluteY="0dp" />

</android.support.constraint.ConstraintLayout>